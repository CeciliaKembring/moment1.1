@page
@model MyApp.Namespace.RazorModel
@{
    ViewData["Title"] = "Razor";

    string[] courses={ "DT057G, Webbutveckling I", "DT084G, Introduktion till programmering i JavaScript", "DT200G, Grafisk teknik för webb", "DT068G, Webbanvändbarhet", "DT093G, Webbutveckling II", "DT003G, Databaser", "DT197G, Webbdesign för CMS", "DT173G, Webbutveckling III", "DT193G, Fullstack-utveckling med ramverk", "IK060G, Projektledning", "DT162G, JavaScriptbaserad webbutveckling", "DT071G, Programmering i C#.NET"   
    };
}

<div class="container">
    <h1 class="display-4">Razor</h1>

    <p>Information</p>
    <p>Datum/klockslag: @DateTime.Now</p>
    
    @if(DateTime.Now.DayOfWeek == DayOfWeek.Monday ) {
    <p>Idag är det måndag</p>
    } else {
    <p>Idag är det inte måndag</p>
    }

    <p>Kurser som jag har läst</p>
    <ul>
       @foreach(var course in courses) {
        <li>@course</li>
       } 
    </ul>
</div>
